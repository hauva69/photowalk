#!/bin/sh

# Make jpgs.

PICASA_MAX_SIZE=2048
SIZE="${PICASA_MAX_SIZE}"
OUTPUT_TYPE='jpg'
#OUTPUT_DIR="${SIZE}_${OUTPUT_TYPE}"
OUTPUT_DIR="orig_${OUTPUT_TYPE}"

if [ ! -d "$OUTPUT_DIR" ] ; then
    mkdir "$OUTPUT_DIR"
fi

for i in "$@"
do
    frmdir=`/usr/bin/dirname $i`
    tofn=`/usr/bin/basename $i .nef`."${OUTPUT_TYPE}"
    /usr/bin/darktable-cli $i "${OUTPUT_DIR}"/$tofn
done




#!/bin/sh

# Make jpgs.

PICASA_MAX_SIZE=2048
SIZE="${PICASA_MAX_SIZE}"
OUTPUT_TYPE='jpg'
OUTPUT_DIR="${SIZE}_${OUTPUT_TYPE}"

if [ ! -d "$OUTPUT_DIR" ] ; then
    mkdir "$OUTPUT_DIR"
fi

ufraw-batch --wb=camera --gamma=0.45 --linearity=0.10 --exposure=0.0 \
    --saturation=1.0 --out-type="${OUTPUT_TYPE}" --size="${SIZE}"\
    --compress=100 \
    --overwrite --out-path="${OUTPUT_DIR}" -- "$@"


